@using StudIS.Web.Mvc.Models
@model ScoredCourseViewModel

<div class="container">
    <div class="col-md-10">
        <h1>@Model.Name</h1>
        <br />
        <div class="panel panel-default">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Komponenta</th>
                        <th>Broj bodova</th>
                        <th>Maksimalan broj bodova</th>
                        <th>Prag</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var score in Model.scoreList) {
                        <tr>

                            <td>@score.ComponentName</td>
                            <td>@score.Value</td>
                            <td>@score.ComponentMax</td>
                            <td>@score.ComponentMinToPass</td>
                        </tr>

                    }

                </tbody>
            </table>
            <br />
            
        </div>
        <b>Ukupno bodova : @Model.cumulativeScore</b>
    </div>

</div>